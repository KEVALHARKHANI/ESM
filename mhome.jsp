    <script type="text/javascript">
    function showall()
    { 
    	
    	xhttp=new XMLHttpRequest();
		  xhttp.onreadystatechange = function() 
		  {
			  if(this.readyState == 4 && this.status == 200)
				  {
				  var val=this.responseText;
				 document.getElementById("show").innerHTML=val;
				  
				  }
		  }
		 
		  xhttp.open("GET", "showemployee?all=yes", true);
		  xhttp.send(); 
    }
    
    
    function call(id,typ)
    { 
    	
    	xhttp=new XMLHttpRequest();
		  xhttp.onreadystatechange = function() 
		  {
			  if(this.readyState == 4 && this.status == 200)
				  {
				  var val=this.responseText;
				 document.getElementById("show").innerHTML=val;
				  
				  }
		  }
		 
		  xhttp.open("GET", "showemployee?"+typ+"="+id, true);
		  xhttp.send();
    }
    function submit()
    {
    	var id=document.getElementById("details").value;
    	id=id.trim();
    	
    	var load=document.getElementById("load");
    	if(id==null ||id=="")
    		{
    			alert("please enter a id or name");
    		}else
    			{
    	if(isNaN(id))
    		{
    		var typ="name";
    		call(id,typ);
    		return true;
    		}else
    			{
    			var typ="id";
    			call(id,typ);
    			return true;
    			}
    			
    			}
    	
    }
    
    
    </script>

</head>

